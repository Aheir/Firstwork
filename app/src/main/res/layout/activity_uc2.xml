<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UC2">

    <Button
        android:id="@+id/Rl_Btn1"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:text="@string/Btn1"
        android:textColor="#202020"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/Rl_Btn2"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/Rl_Btn1"
        android:layout_marginStart="200dp"
        android:text="@string/Btn2"
        android:textColor="#202020"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/Rl_Btn3"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@id/Rl_Btn1"
        android:layout_marginTop="50dp"
        android:text="@string/Btn3"
        android:textColor="#202020"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/Rl_Btn4"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/Rl_Btn3"
        android:layout_marginStart="200dp"
        android:layout_marginTop="50dp"
        android:text="@string/Btn4"
        android:textColor="#202020"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/Rl_R"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="@string/Rt"
        android:textColor="#202020"/>


</RelativeLayout>